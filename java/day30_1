package exam28;

public class Data {
	
	private int value;
	
	public Data(int value) {
		this.value = value;
	}
	
	
	@Override
	public boolean equals(Object d) {
		boolean isTrue = false;
		
		if(this == d) {
			return !isTrue;
		}
		
		if(d instanceof Data) {
			if(this.value == ((Data)d).value) {
				isTrue = true;
			}
			
		}
		return isTrue;
	}
	
	
	public String toString() {
		String str = "ê°’ : " + this.value;
		return str;
	}

}
